@model IEnumerable<I1.Models.Driver>

@{
    ViewBag.Title = "Driver List";
}

<h2>Driver List</h2>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr class="thead-dark">
        @*<th>
            @Html.DisplayNameFor(model => model.IDDriver)
        </th>*@
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone Number</th>
        <th>Drivers Licence Number</th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.IDDriver)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DriversLicenceNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IDDriver }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IDDriver })
        </td>
    </tr>
}

</table>
